 {

  "manifest_version": 2,
  "name": "Privacy Machine",
  "version": "0.1",

  "description": "Opens a link in the Privacy Machine when alt+shift is pressed.",

  "icons": {
    "48": "icon.png"
  },

  "applications": {
    "gecko": {
      "id": "firefox_addon@pm.org",
      "strict_min_version": "50.0"
    }
  },
  
  "permissions": [
    "contextMenus",
    "nativeMessaging"
  ],
  
  "background": {
	"scripts": ["pmBackground.js"]
  }

}
